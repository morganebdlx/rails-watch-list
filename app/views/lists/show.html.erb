<div class="container">

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>)">
  <h1><%= @list.name %></h1>
</div>



  <ul>
  <%  @list.movies.each  do |movie|%>
  <li> <%= movie.title %></li>
  <li> <%= movie.overview %></li>
  <li> <%= movie.rating %></li>
  <li> <%= movie.poster_url %></li>
  <li><%= link_to "Supprimer un film", bookmark_path(movie.bookmark_ids), data: {turbo_method: :delete, turbo_confirm: "Etes vous sûr ?"} %></li>
<% end %>
 </ul>



<%= link_to "Ajouter un film", new_list_bookmark_path(@list) %>
<%= link_to "Revenir à mes listes", lists_path %>

</div>
