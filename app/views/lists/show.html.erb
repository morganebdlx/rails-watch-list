<div class="container">

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <h1><%= @list.name %></h1>
</div>



<div class="card-product">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" width="100px"/>
  <ul>
  <%  @list.movies.each  do |movie|%>
  <div class="card-product-infos">
  <li> <%= movie.title %></li>
  <li> <%= movie.overview %></li>
  <li> <%= movie.rating %></li>
  <li> <%= movie.poster_url %></li>
  <li><%= link_to "Supprimer un film", bookmark_path(movie.bookmark_ids), data: {turbo_method: :delete, turbo_confirm: "Etes vous sûr ?"} %></li>
  </div>
  <% end %>
 </ul>
</div>



<%= link_to "Revenir à mes listes", lists_path %>

</div>
