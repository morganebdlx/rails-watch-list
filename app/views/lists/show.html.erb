<div class="container">

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>)">
  <h1><%= @list.name %></h1>
</div>

<%  @list.movies.each  do |movie|%>
<div class="card-product mt-3 my-3">
  <img src="<%= movie.poster_url %>"  class="card-img-left" alt="movie poster"/>
  <div class="card-product-infos">

  <h4><%= movie.title %></h4>
  <p> <%= movie.overview %></p>
  <p> <%= movie.rating %></p>

  <br>
  <%= link_to "Supprimer un film", bookmark_path(movie.bookmark_ids), class: "btn btn-primary" , data: {turbo_method: :delete, turbo_confirm: "Etes vous sûr ?"} %>
 </div>

</div>
 <% end %>







<%= link_to "Ajouter un film", new_list_bookmark_path(@list) %>
<%= link_to "Revenir à mes listes", lists_path %>

</div>
